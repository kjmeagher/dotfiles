{
  "terminal.integrated.profiles.linux": {
    "env-shell": {
      "path": "${workspaceFolder}/../build/env-shell.sh",
      "icon": "arrow-circle-right"
    }
  },
  "terminal.integrated.profiles.osx": {
    "env-shell": {
      "path": "${workspaceFolder}/../build/env-shell.sh",
      "icon": "arrow-circle-right"
    }
  },
  "terminal.integrated.defaultProfile.linux": "env-shell",
  "terminal.integrated.defaultProfile.osx": "env-shell",
  "cmake.buildDirectory": "${workspaceFolder}/../build",
  "python.analysis.extraPaths": ["../build/lib", "../venv/lib/python3.12/site-packages/"],
  "python.analysis.stubPath": "stubs",
  "cmake.ctest.allowParallelJobs": true,
  "cmake.buildArgs": [ "--target", "pybindings", "--target", "test-bins" ],
  "cmake.testEnvironment": {
    "PYTHONPATH": "${workspaceFolder}/../build/lib/",
    "I3_BUILD": "${workspaceFolder}/../build",
    "I3_SRC": "${workspaceFolder}",
    "PATH": "${workspaceFolder}/../build/bin:${workspaceFolder}/../venv/bin:${env:PATH}",
    "TERM": "vt100",
  },
  "cmake.configureArgs": [
    "-DPython_ROOT_DIR=~/icecube/icetray/venv",
    "-Wno-dev"
  ]
}
